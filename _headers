# Cloudflare Pages Headers
# Controls CDN edge caching behavior

# HTML files - NEVER cache at CDN edge (always fetch fresh)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Root index.html
/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Bundled files (content-hashed) - cache for 1 year
/dist/*.css
  Cache-Control: public, max-age=31536000, immutable

/dist/*.js
  Cache-Control: public, max-age=31536000, immutable

# Non-bundled JS files (auth.js, storage-client.js, etc.) - no cache
# Query string versioning doesn't work at CDN edge; must use no-cache
/*.js
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0

# Non-bundled CSS - no cache
/*.css
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0

# Images and fonts - cache for 1 year
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# API endpoints - NEVER cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache

# Lock screen files - short cache (they change occasionally)
/lock/*
  Cache-Control: public, max-age=3600
